@model MovieShop.Models.Actor

@{
    ViewData["Title"] = "Actor Details";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p><h1> @Model.FullName  Details </h1></p>
        <div class="row">
            <div class="col-md-8 offset-2">
                    <div class="form-group text-center">
                        <img id="ProfilePicturePreview" class="border-info rounded-circle" style="max-width:150px" />
                    </div>
                    <div class="form-group mt-3">
                        <label asp-for="ProfilePictureURL" class="control-label pb-2"> </label>
                        <input asp-for="ProfilePictureURL" readonly id="ProfilePictureURL" class="form-control" />
                    </div>
                    <div class="form-group mt-3">
                        <label asp-for="FullName" class="control-label pb-2"> </label>
                        <input asp-for="FullName" readonly class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"> </span>
                    </div>
                    <div class="form-group mt-3">
                        <label asp-for="Bio" class="control-label pb-2"> </label>
                        <textarea asp-for="Bio" readonly class="form-control"> </textarea>
                    </div>
                    <div class="form-control mt-3">
                    <a asp-controller="Actors" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary float-right"> <i class="fa fa-pencil"></i> Edit</a> |
                        <a class="btn btn-outline-secondary" asp-controller="Actors" asp-action="Index">Show All</a> |
                    <a asp-controller="Actors" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger float-right"> <i class="fa fa-trash"></i> Delete</a>
                    </div>
            </div>
        </div>
    </div>
</div>
