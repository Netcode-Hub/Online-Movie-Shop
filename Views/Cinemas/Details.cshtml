@model MovieShop.Models.Cinema

@{
    ViewData["Title"] = "Cinemas Details";
}


<div class="row">
    <div class="col-md-8 offset-2">
        <p><h1> @Model.Name  Details </h1></p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                    <img id="LogoPreview" class="border-info rounded-circle LogoPreview" style="max-width:150px" />
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Logo" class="control-label pb-2"> </label>
                    <input asp-for="Logo" readonly id="Logo" class="form-control Logo" />
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Name" class="control-label pb-2"> </label>
                    <input asp-for="Name" readonly class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"> </span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Desc" class="control-label pb-2"> </label>
                    <textarea asp-for="Desc" readonly class="form-control"> </textarea>
                </div>
                <div class="form-control mt-3">
                    <a asp-controller="Cinemas" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary float-right"> <i class="fa fa-pencil"></i> Edit</a> |
                    <a class="btn btn-outline-secondary" asp-controller="Cinemas" asp-action="Index">Show All</a> |
                    <a asp-controller="Cinemas" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger float-right"> <i class="fa fa-trash"></i> Delete</a>
                </div>
            </div>
        </div>
    </div>
</div>
